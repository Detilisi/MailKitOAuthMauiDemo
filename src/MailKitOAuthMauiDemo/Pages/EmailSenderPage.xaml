<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MailKitOAuthMauiDemo.Pages.EmailSenderPage"
             xmlns:vm="clr-namespace:MailKitOAuthMauiDemo.ViewModels"
             x:DataType="vm:EmailSenderViewModel"
             Title="Send Email">

    <VerticalStackLayout 
        Padding="20" 
        Spacing="10">
        <!-- Sender Entry -->
        <Label Text="Sender Email" />
        <Entry 
            Text="{Binding Sender, Mode=OneWay}" 
            Placeholder="sender@example.com"
            IsReadOnly="True"/>
        
        <!-- Recipient Entry -->
        <Label Text="Recipient Email" />
        <Entry Text="{Binding Recipient}" Placeholder="recipient@example.com" />

        <!-- Subject Entry -->
        <Label Text="Subject" />
        <Entry Text="{Binding Subject}" Placeholder="Email subject" />

        <!-- Body Editor -->
        <Label Text="Message" />
        <Editor Text="{Binding Body}" HeightRequest="200" Placeholder="Write your message here..." />

        <!-- Send Button -->
        <Button 
            Text="Send Email" 
            Command="{Binding SendEmailCommand}" />

        <!-- Activity Indicator -->
        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
    </VerticalStackLayout>
</ContentPage>
