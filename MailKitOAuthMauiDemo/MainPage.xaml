<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MailKitOAuthMauiDemo.MainPage"
             BackgroundColor="#303030">

    <VerticalStackLayout 
        Padding="10" 
        Spacing="20" 
        VerticalOptions="Center">
        <Label 
            Text="Sign In" 
            TextColor="#FF4500" 
            FontAttributes="Bold"
            FontSize="32"
            HorizontalOptions="Center" 
            />

        <Label Text="with" 
           FontSize="18" 
           TextColor="White" 
           HorizontalOptions="Center" />

        <ImageButton 
            Source="google_icon.png" 
            Margin="20"
            Padding="30"
            WidthRequest="150" 
            HeightRequest="150" 
            CornerRadius="90"
            Clicked="GoogleBtn_Clicked"
            />
        
        <Button 
            FontSize="18" 
            Text="don't have an account? sign up" 
            TextColor="White" 
            BackgroundColor="CornflowerBlue" 
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>
